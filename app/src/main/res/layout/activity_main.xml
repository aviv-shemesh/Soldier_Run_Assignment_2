<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Background Image"
        android:scaleType="centerCrop"
        android:src="@drawable/military_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/livesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Life 1"
                    android:src="@drawable/helmet" />

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Life 2"
                    android:src="@drawable/helmet" />

                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Life 3"
                    android:src="@drawable/helmet" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-black"
                android:text="000"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="567dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp">

            <ImageButton
                android:id="@+id/btnLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/green_circle_bg"
                android:contentDescription="Move Left Button"
                android:src="@drawable/ic_arrow_left" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/green_circle_bg"
                android:contentDescription="Move Right Button"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgPlayer"
        android:layout_width="95dp"
        android:layout_height="135dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:contentDescription="Player Character"
        android:src="@drawable/soldier" />

    <ImageView
        android:id="@+id/imgCoin1"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Coin"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgCoin2"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Coin"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgCoin3"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Coin"
        android:src="@drawable/coin"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgBeret1"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Obstacle"
        android:src="@drawable/beret"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgBeret2"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Obstacle"
        android:src="@drawable/beret"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgBeret3"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Obstacle"
        android:src="@drawable/beret"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgBeret4"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Obstacle"
        android:src="@drawable/beret"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgBeret5"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:contentDescription="Obstacle"
        android:src="@drawable/beret"
        android:visibility="invisible" />

</FrameLayout>
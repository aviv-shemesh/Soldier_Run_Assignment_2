<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#8F9779"
    app:strokeWidth="1dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/score_IMG_medal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/btn_star_big_on"
                android:visibility="gone"
                android:contentDescription="Rank Medal"/>

            <TextView
                android:id="@+id/score_LBL_rank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="#4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4B5320"/>
        </FrameLayout>

        <TextView
            android:id="@+id/score_LBL_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Soldier Name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/score_IMG_map"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_dialog_map"
            app:tint="#4B5320"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/score_LBL_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4B5320"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>